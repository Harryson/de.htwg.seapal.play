# Routes

# Static pages
GET     /           				controllers.Application.index()
GET     /screenshots        		controllers.Application.screenshots()
GET     /about              		controllers.Application.about()
GET     /contact            		controllers.Application.contact()
GET     /user_guide         		controllers.Application.user_guide()
GET		/seamap						controllers.Application.seamap()
# to be continued ...

# Seapal web app
GET		/boat_info					controllers.BoatInfo.index()
GET		/boatservice/$id<[0-9]+>	controllers.BoatInfo.boatAsJson(id: Long)
GET		/boatservice				controllers.BoatInfo.boatsAsJson()
POST	/boatservice				controllers.BoatInfo.addBoat()
POST	/delete_boat/:id 			controllers.BoatInfo.deleteBoat(id: Long)
GET		/boatposition				controllers.BoatPositionAPI.current()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file       		controllers.Assets.at(path="/public", file)
